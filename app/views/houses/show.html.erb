<%= @house.street_address %>
<h3>Roommates:</h3>
<ul>
  <% @house.users.each do |user| %>
    <li><%= user.first_name%> <%=user.last_name %></li>
  <%end%>
</ul>

<div class="events">

  <form class="events">
    <h3>Events</h3>
    <label>
      Event <input type="text" name="event" id="event" />
    </label>
    <label>
      Date <input type="date" name="date" id="date" />
    </label>
    <label>
      Time <input type="time" name="time" id="time" />
    </label>
    <button class="events">Save</button>
  </form>

  <ul id="events"> 
  </ul>
</div>


<div class="bills">

  <form class="bills">
    <h3>Bills</h3>
    <label>
      Name <input type="text" name="name" id="name" />
    </label>
    <label>
      Amount Due <input type="text" name="amount" id="amount" />
    </label>
    <label>
      Due Date <input type="date" name="due_date" id="due_date" />
    </label>
    <button class="bills">Save</button>
  </form>

  <ul id="bills"> 
  </ul>
</div>

<script type="template" class="eventtemplate">
  <span> Event: </span><%%= event.get("title") %>
  <span> Date: </span><%%= event.get("date") %>
  <span> Time: </span><%%= event.get("time") %>
  <span> Added By: </span><%%= event.get("user_id") %>
  <button class="delete_event">Delete</button>
</script>

<script type="template" class="billtemplate">
  <span> Bill: </span><%%= bill.get("name") %>
  <span> Amount Due: </span><%%= bill.get("amount") %>
  <span> Date Due: </span><%%= bill.get("date_due") %>
  <span> Added By: </span><%%= bill.get("user_id") %>
  <button class="delete_bill">Delete</button>
</script>

