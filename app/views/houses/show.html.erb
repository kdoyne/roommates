<%= @house.street_address %>
<h3>Roommates:</h3>
<ul>
  <% @house.users.each do |user| %>
    <li id="<%=user.id%>"><%= user.first_name%> - <%= user.email%></li>
  <%end%>
</ul>

<div class="events">

  <form class="events">
    <h3>Events</h3>
    <label>
      Event <input type="text" name="event" id="event" />
    </label>
    <label>
      Date <input type="date" name="date" id="date" />
    </label>
    <label>
      Time <input type="time" name="time" id="time" />
    </label>
    <button class="events">Save</button>
  </form>

  <ul id="events"> 
  </ul>
</div>


<div class="bills">

  <form class="bills">
    <h3>Bills</h3>
    <label>
      Name <input type="text" name="name" id="name" />
    </label>
    <label>
      Amount Due <input type="text" name="amount" id="amount" />
    </label>
    <label>
      Due Date <input type="date" name="due_date" id="due_date" />
    </label>
    <button class="bills">Save</button>
  </form>

  <table id="bills">
  <tr>
  <td> Bill: </td>
  <td> Amount Due: </td>
  <td> Date Due: </td>
  <td> Added By: </td>
  <td> Split: </td>
  <td> Pay: </td>
  <tr>
  </table>
</div>

<script type="template" class="eventtemplate">
  <span> Event: </span><%%= event.get("title") %>
  <span> Date: </span><%%= event.get("date") %>
  <span> Time: </span><%%= event.get("time") %>
  <span> Added By: </span><%%= $("li#"+(event.get("user_id"))).text().split(" - ")[0] %>
  <button class="delete_event">Delete</button>
</script>

<script type="template" class="billtemplate">
  <td> <%%= bill.get("name") %> </td>
  <td> <%%= bill.get("amount") %> </td>
  <td> <%%= bill.get("due_date") %> </td>
  <td> <%%= $("li#"+(bill.get("user_id"))).text().split(" - ")[0] %> </td>
  <td> <%%= bill.get("amount")/($("ul").first().children().length) %> </td>
  <td> <a href=mailto:<%%=$("li#"+(bill.get("user_id"))).text().split(" - ")[1]%>?cc=send@square.com&subject=Here&#39s&#32;$<%%= bill.get("amount") %> ><button class="send_money">Send Money </button></a></td>
  <td> <button class="delete_bill">Delete</button> </td>
</script>

